<body>
  <header class="header">
    <a class="header__container-logo" href="/">
      <img src="../images/logo.svg" alt="Logo">
      <span>TxtFlow</span>
    </a>

    <div class="header__container-user">
      <span>@<%= username %></span>
      <div>
        <%= initial %>
      </div>
    </div>
  </header>

  <div class="home__container">
    <aside class="home__container-user">
      <header>
        <div class="profile-picture">
          <%= initial %>
        </div>

        <div class="user-info">
          <p>
            <%= name %>
          </p>
          <span>
            @<%= username %>
          </span>
        </div>
      </header>

      <div class="divisor"></div>

      <div class="user-data">
        <div class="row">
          <p>Posts</p>
          <span>24</span>
        </div>

        <div class="row">
          <p>Curtidas recebidas</p>
          <span>142</span>
        </div>
      </div>

      <div class="divisor"></div>

      <div class="menu">
        <h4>Menu</h4>

        <nav>
          <a href="/home">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
